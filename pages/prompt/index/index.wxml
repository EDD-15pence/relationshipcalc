<view class="container">
  <view class="header">Prompt 模板库</view>
  <view class="prompt-list">
    <block wx:for="{{templates}}" wx:key="id" wx:for-item="item">
      <view class="prompt-item" bindtap="onSelectTemplate" data-id="{{item.id}}" hover-class="item-hover">
        <view class="prompt-title">{{item.title}}</view>
        <view class="prompt-category">{{item.category}}</view>
      </view>
    </block>
  </view>
</view>
