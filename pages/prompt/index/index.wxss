.container { padding: 20px; }
.header { font-size: 20px; font-weight: bold; margin-bottom: 16px; }
.prompt-list { display: flex; flex-direction: column; gap: 12px; }
.prompt-item { background: #fff; border-radius: 8px; padding: 16px; box-shadow: 0 1px 4px rgba(0,0,0,0.04); }
.prompt-title { font-size: 16px; font-weight: 600; }
.prompt-category { font-size: 12px; color: #888; margin-top: 4px; }
