<view class="container {{isDark ? 'dark' : ''}}">
  <!-- 顶部导航栏 -->
  <view class="navbar">
    <text class="navbar-title">工具箱</text>
    <view class="navbar-actions">
      <button class="icon-btn" hover-class="icon-hover" bindtap="onToggleTheme">{{isDark ? '🌙' : '☀️'}}</button>
    </view>
  </view>

  <!-- 工具网格 -->
  <view class="tools-grid">
    <!-- 亲属称呼换算器卡片 -->
    <view class="tool-card" bindtap="navigateToTool" data-tool="relationship">
      <view class="tool-icon">👨‍👩‍👧‍👦</view>
      <text class="tool-name">亲属称呼换算</text>
      <text class="tool-desc">快速计算亲属关系称呼</text>
    </view>

    <!-- 打卡工具卡片 -->
    <view class="tool-card" bindtap="navigateToTool" data-tool="punchin">
      <view class="tool-icon">📅</view>
      <text class="tool-name">打卡</text>
      <text class="tool-desc">记录你的打卡时间</text>
    </view>

    <!-- 未来可以添加更多工具卡片 -->
    <!-- 
    <view class="tool-card" bindtap="navigateToTool" data-tool="other">
      <view class="tool-icon">🎯</view>
      <text class="tool-name">其他工具</text>
      <text class="tool-desc">敬请期待</text>
    </view>
    -->
  </view>

  <!-- 底部说明 -->
  <view class="footer">
    <text class="footer-text">点击卡片打开对应工具</text>
  </view>
</view>


