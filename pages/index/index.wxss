.container {
  min-height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  color: #000000;
}

.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}

.navbar-actions {
  display: flex;
  gap: 12rpx;
}

.icon-btn {
  background: transparent;
  border: none;
  padding: 8rpx 12rpx;
  font-size: 32rpx;
  line-height: 1;
  color: #000000;
}

.icon-hover {
  opacity: 0.6;
}

/* 工具网格布局 */
.tools-grid {
  flex: 1;
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 20rpx;
  overflow-y: auto;
}

.tool-card {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.tool-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tool-card:hover {
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tool-icon {
  font-size: 64rpx;
  line-height: 1;
}

.tool-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  word-break: break-all;
}

.tool-desc {
  font-size: 24rpx;
  color: #999999;
  word-break: break-all;
}

/* 底部说明 */
.footer {
  padding: 20rpx 24rpx;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}

/* 夜间模式 */
.container.dark {
  background: #121212;
  color: #eaeaea;
}

.container.dark .navbar {
  background: #1c1c1c;
  border-bottom-color: #2a2a2a;
}

.container.dark .navbar-title {
  color: #eaeaea;
}

.container.dark .icon-btn {
  color: #eaeaea;
}

.container.dark .tool-card {
  background: #1a1a1a;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.container.dark .tool-card:hover {
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.5);
}

.container.dark .tool-name {
  color: #eaeaea;
}

.container.dark .tool-desc {
  color: #999999;
}

.container.dark .footer {
  border-top-color: #2a2a2a;
  background: #1c1c1c;
}

.container.dark .footer-text {
  color: #999999;
}
